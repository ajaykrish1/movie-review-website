<html lang="en">
  <head>
    <title>Home Page</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/movies">Movie Review</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <%if(!currentUser){%>
          <li class="nav-item active">
            <a class="nav-link" href="/login">Log-In</a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/register">Sign-Up</a>
          </li>
          <%}else{%>
          <li class="nav-item active">
            <a class="nav-link" href="/logout">Log-Out</a>
          </li>
          <%}%>
        </ul>
      </div>
    </nav>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <p class="lead">Additional info</p>
          <div class="list-group">
            <div class="list-group-item"></div>
            <div class="list-group-item">a</div>
            <div class="list-group-item"></div>
          </div>
        </div>
        <div class="col-md-9">
          <div class="thumbnail">
            <img class="img-responsive" src="<%= movie.image %>" alt="" />
            <div class="caption-full">
              <h4><a><%= movie.name %></a></h4>
            </div>
          </div>
          <a class="btn btn-warning" href="">Edit</a>

          <button id=" delete-form" class="btn btn-danger">Delete</button>
        </div>
      </div>

      <div class="well">
        <div class="text-right">
          <a
            class="btn btn-success"
            href="/movies/<%= movie._id %>/comments/add "
            >Add New Comment</a
          >
        </div>
        <hr />

        <div class="row">
          <div class="col-md-12">
            <% movie.comments.forEach(function(comment) { %>
            <p><strong><%=comment.author%></strong> - <%=comment.text%></p>
            <%})%>
            <a class="btn btn-xs btn-warning" href="">Edit</a>
            <form class="delete-form" action="" method="post">
              <button class="btn btn-xs btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
