        <div class="navbar-header">
          <a class="navbar-brand" href="/movies">Movie Review</a>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <%if(!currentUser){%>
          <li class="nav-item active">
            <a class="nav-link" href="/login">Log-In</a>
